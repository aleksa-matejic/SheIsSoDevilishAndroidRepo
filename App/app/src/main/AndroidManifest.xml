<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.aleksa.matejic.app">

    <application
        android:allowBackup="true"
        android:icon="@drawable/devil_background"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainMenuActivity" android:screenOrientation="sensorLandscape">
        </activity>
        <activity android:name=".CreditsActivity" android:screenOrientation="sensorLandscape">
        </activity>
        <activity android:name=".StartGameActivity" android:screenOrientation="sensorLandscape">
        </activity>
        <activity android:name=".StatisticsActivity" android:screenOrientation="sensorLandscape">
        </activity>
        <activity android:name=".OptionsActivity" android:screenOrientation="sensorLandscape">
        </activity>
        <activity android:name=".NewProfileActivity" android:screenOrientation="sensorLandscape">
        </activity>
        <activity android:name=".ProfileActivity" android:screenOrientation="sensorLandscape">
        </activity>
        <activity android:name=".GameActivity" android:screenOrientation="sensorLandscape">
        </activity>
    </application>

</manifest>